{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Kinetrix: Compile for Arduino (Default)",
            "type": "shell",
            "command": "./kcc",
            "args": [
                "${file}",
                "--target", "arduino",
                "-o", "${fileDirname}/${fileBasenameNoExtension}.ino"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": { "echo": true, "reveal": "always", "clear": true },
            "problemMatcher": []
        },
        {
            "label": "Kinetrix: Compile for ESP32",
